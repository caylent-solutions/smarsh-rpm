# RPM Configuration
# Environment variables override these defaults (for pipeline integration)

# RPM Manifest Repository
REPO_MANIFESTS_URL=https://github.com/caylent-solutions/smarsh-rpm.git
REPO_MANIFESTS_REVISION=refs/tags/1.1.0
REPO_MANIFESTS_PATH=repo-specs/java/gradle/springboot/microservice/meta.xml

# Repo Tool (Caylent fork with envsubst support)
REPO_URL=https://github.com/caylent-solutions/git-repo.git
REPO_REV=caylent-0.1.2

# Git Base URL for packages (resolved by 'repo envsubst' in remote.xml)
GITBASE=https://github.com/caylent-solutions/

# Pipeline Configuration
IS_PIPELINE=false

# asdf Configuration
ASDF_URL=https://github.com/asdf-vm/asdf.git
ASDF_VERSION=v0.15.0
ASDF_DIR=${HOME}/.asdf
TOOL_VERSIONS_FILE=.tool-versions
DEFAULT_PYTHON_VERSION=3.12.9

# Build Configuration (read by smarsh-rpm-gradle-build)
JAVA_VERSION=17
ARTIFACTORY_URL=

# Package Directory
PACKAGES_DIR=.packages
